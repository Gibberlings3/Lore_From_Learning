IF 
  GlobalGT("cd_lore_class_time","GLOBAL",%class_bonus_1%)  
  Global("cd_lore_class_bonus","GLOBAL",0) 
THEN
  RESPONSE #100
    SetGlobal("cd_lore_class_bonus","GLOBAL",1) 
    ApplySpellRES("cdlore1",Player1)
    DisplayString(Myself,@3004)
END    

